sed -i "s/username_placeholder/$DATABASE_USERNAME/" config/prod.secret.exs
sed -i "s/password_placeholder/$DATABASE_PASSWORD/" config/prod.secret.exs
sed -i "s/password_placeholder/$DATABASE_DATABASE/" config/prod.secret.exs

eval "$( aws ecr get-login --region us-west-2 )"
cd  api && docker build -t ts-api .
docker tag ts-api:latest 194812415682.dkr.ecr.us-west-2.amazonaws.com/ts-api:latest
docker push 194812415682.dkr.ecr.us-west-2.amazonaws.com/ts-api:latest
