{
  "name": "monarch-service",
  "version": "0.0.0",
  "description": "",
  "main": "index",
  "author": "Emma Bukacek",
  "license": "AGPL-3.0",
  "engine": {
    "node": ">= 8.0.0"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.0",
    "boom": "^7.2.0",
    "bounce": "^1.2.0",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^17.5.2",
    "hapi-auth-jwt2": "^8.1.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.0.1",
    "knex": "^0.15.1",
    "lodash": "^4.17.10",
    "nconf": "^0.10.0",
    "pg": "^7.2.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2"
  },
  "scripts": {
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "gen-keys": "yarn private-key && yarn public-key",
    "lint": "node_modules/.bin/eslint src/",
    "private-key": "openssl genrsa 4096 > rsa-private.pem",
    "public-key": "openssl rsa -in rsa-private.pem -pubout > rsa-public.pem",
    "start": "node_modules/.bin/nodemon index",
    "test": "yarn test:unit && yarn test:feature",
    "test:coverage": "nyc --reporter=html yarn test",
    "test:feature": "node_modules/.bin/cucumber-js src/features --tags 'not @Disabled'",
    "test:feature:only": "yarn test:feature --tags '@Only'",
    "test:unit": "node_modules/.bin/mocha 'src/**/*.test.js' test/mocha_hooks.js"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cucumber": "^4.2.1",
    "eslint": "^5.1.0",
    "lodash-match-pattern": "^2.0.1",
    "mocha": "^5.2.0",
    "mock-require": "^3.0.2",
    "mockingjays": "^2.2.1",
    "nock": "^10.0.3",
    "nodemon": "^1.18.2",
    "nyc": "^12.0.2",
    "sinon": "^6.1.3",
    "sinon-chai": "^3.2.0"
  },
  "nyc": {
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/routes",
      "src/features",
      "src/seeds"
    ]
  }
}
